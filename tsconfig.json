{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2022",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "jsx": "react",
    "paths": { "@/*": ["*"] }
  }
}
